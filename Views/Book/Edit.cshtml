@model Bookdto
@{
    ViewData["Title"] = "Edit book";
}
<h2>Library</h2>
<form asp-action="Edit" asp-controller="Book" method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label">Id</label>
        <div class="col-sm-8">
            <input class="form-control-plaintext" readonly value="@ViewData["BookId"]">
        </div>
    </div>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label>Book Title</label>
            <input asp-for="Title" type="text" class="form-control" required>
            
        </div>
        <div class="form-group">
            <label>Author</label>
            <input asp-for="Author" type="text"  required>
            
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Category</label>
            <div class="col-sm-8">
                <select class="form-select" asp-for="Category">
                    <option value="Others">Others</option> 
                    <option value="Fantasy">Fantasy</option> 
                    <option value="Sci-Fic">Sci-Fic</option> 
                    <option value="Romantic">Romantic</option> 
                    <option value="Reincarnation">Reincarnation</option>
                    <option value="Wild">Wild</option>
                    
                </select>
            </div>
        </div>
        <div class="form-group">
            <label>Published on</label>
            <input asp-for="published" type="text" class="form-control" required>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-4 col-sm-8">
                <img src="/books/@ViewData["ImageFileName"]" width="150">
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Image</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Image">
              
            </div>
        </div>
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <center>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="Index" asp-controller="Book" class="btn btn-secondary">Cancel</a>
            </center>
        </div>
    </div>

</div>
</form>
